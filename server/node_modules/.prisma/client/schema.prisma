model ProductOrder {
  orderNo   Int @unique
  productId Int

  orderDate DateTime
  section   Int
  row       Int

  product       ProductDetails       @relation(fields: [productId], references: [id])
  customerOrder CustomerOrderDetails @relation(fields: [orderNo], references: [invoiceNo])
}

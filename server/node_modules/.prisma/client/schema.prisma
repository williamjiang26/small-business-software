generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  Started
  Fulfilled
}

model Product {
  productId Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  photoUrls String[]
  height    Float
  width     Float
  length    Float
  price     Float
  color     String
  rating    Float?
  quantity  Int

  manager   Manager @relation(fields: [managerId], references: [managerId])
  managerId Int
  orders    Order[]
}

model Order {
  orderId    Int         @id @default(autoincrement())
  orderDate  DateTime
  products   Product[]
  status     OrderStatus
  customerId Int
  salesRepId Int

  customer Customer @relation(fields: [customerId], references: [customerId])
  salesRep SalesRep @relation(fields: [salesRepId], references: [salesRepId])
  driver   Driver[] @relation("DriverOrders")
  staff    Staff[]  @relation("StaffOrders")
}

model Customer {
  customerId Int     @id @default(autoincrement())
  address    String
  name       String
  phone      String
  email      String  @unique
  profile    String?
  orders     Order[]
}

model Manager {
  managerId     Int       @id @default(autoincrement())
  name          String
  email         String    @unique
  profile       String?
  addedProducts Product[]
}

model Staff {
  staffId Int     @id @default(autoincrement())
  name    String
  email   String?
  orders  Order[] @relation("StaffOrders")
}

model SalesRep {
  salesRepId  Int     @id @default(autoincrement())
  name        String
  email       String?
  addedOrders Order[]
}

model Driver {
  driverId Int     @id @default(autoincrement())
  orders   Order[] @relation("DriverOrders")
}
